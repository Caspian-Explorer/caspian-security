{
  "name": "caspian-security",
  "displayName": "Caspian Security Extension",
  "description": "Real-time security analysis for VS Code â€” 133 rules across 14 categories detecting vulnerabilities, insecure patterns, and security best practice violations",
  "icon": "icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/Caspian-Explorer/caspian-security"
  },
  "version": "5.0.0",
  "publisher": "CaspianTools",
  "license": "MIT",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Linters",
    "Other"
  ],
  "galleryBanner": {
    "color": "#1a1a2e",
    "theme": "dark"
  },
  "keywords": [
    "security",
    "vulnerability",
    "linting",
    "code-analysis",
    "static-analysis",
    "owasp",
    "xss",
    "sql-injection",
    "csrf"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onLanguage:javascript",
    "onLanguage:typescript",
    "onLanguage:python",
    "onLanguage:java",
    "onLanguage:csharp",
    "onLanguage:php",
    "onLanguage:go",
    "onLanguage:rust"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "caspian-security.runCheck",
        "title": "Run Security Check"
      },
      {
        "command": "caspian-security.runCheckFile",
        "title": "Caspian Security: Check Current File"
      },
      {
        "command": "caspian-security.runCheckWorkspace",
        "title": "Caspian Security: Check Entire Workspace"
      },
      {
        "command": "caspian-security.runFullScan",
        "title": "Caspian Security: Run Full Security Scan (All Categories)"
      },
      {
        "command": "caspian-security.fixIssue",
        "title": "Caspian Security: Fix Issue (AI or Suggestion)"
      },
      {
        "command": "caspian-security.openAISettings",
        "title": "Caspian Security: Configure AI Fix Provider"
      },
      {
        "command": "caspian-security.aiFixIssue",
        "title": "Caspian Security: Fix Issue with AI"
      },
      {
        "command": "caspian-security.ignoreIssue",
        "title": "Caspian Security: Ignore Issue"
      },
      {
        "command": "caspian-security.resetFixTracker",
        "title": "Caspian Security: Reset Fix Tracker"
      },
      {
        "command": "caspian-security.check-auth-access-control",
        "title": "Caspian Security: Check Authentication & Access Control"
      },
      {
        "command": "caspian-security.check-input-validation-xss",
        "title": "Caspian Security: Check Input Validation & XSS"
      },
      {
        "command": "caspian-security.check-csrf-protection",
        "title": "Caspian Security: Check CSRF Protection"
      },
      {
        "command": "caspian-security.check-cors-configuration",
        "title": "Caspian Security: Check CORS Configuration"
      },
      {
        "command": "caspian-security.check-encryption-data-protection",
        "title": "Caspian Security: Check Encryption & Data Protection"
      },
      {
        "command": "caspian-security.check-api-security",
        "title": "Caspian Security: Check API Security"
      },
      {
        "command": "caspian-security.check-database-security",
        "title": "Caspian Security: Check Database Security"
      },
      {
        "command": "caspian-security.check-file-handling",
        "title": "Caspian Security: Check File Handling"
      },
      {
        "command": "caspian-security.check-secrets-credentials",
        "title": "Caspian Security: Check Secrets & Credentials"
      },
      {
        "command": "caspian-security.check-frontend-security",
        "title": "Caspian Security: Check Frontend Security"
      },
      {
        "command": "caspian-security.check-business-logic-payment",
        "title": "Caspian Security: Check Business Logic & Payment Security"
      },
      {
        "command": "caspian-security.check-logging-monitoring",
        "title": "Caspian Security: Check Logging & Monitoring"
      },
      {
        "command": "caspian-security.check-dependencies-supply-chain",
        "title": "Caspian Security: Check Dependencies & Supply Chain"
      },
      {
        "command": "caspian-security.check-infrastructure-deployment",
        "title": "Caspian Security: Check Infrastructure & Deployment"
      },
      {
        "command": "caspian-security.showResultsPanel",
        "title": "Caspian Security: Show Results Panel"
      },
      {
        "command": "caspian-security.exportJSON",
        "title": "Caspian Security: Export Results to JSON"
      },
      {
        "command": "caspian-security.exportCSV",
        "title": "Caspian Security: Export Results to CSV"
      },
      {
        "command": "caspian-security.runCheckUncommitted",
        "title": "Caspian Security: Scan Uncommitted Files"
      },
      {
        "command": "caspian-security.checkDependencyUpdates",
        "title": "Caspian Security: Check Dependency & Stack Updates"
      }
    ],
    "menus": {
      "scm/title": [
        {
          "command": "caspian-security.runCheckUncommitted",
          "group": "navigation",
          "when": "scmProvider == git"
        }
      ],
      "commandPalette": [
        {
          "command": "caspian-security.exportJSON",
          "when": "caspian-security.hasResults"
        },
        {
          "command": "caspian-security.exportCSV",
          "when": "caspian-security.hasResults"
        },
        {
          "command": "caspian-security.aiFixIssue",
          "when": "false"
        },
        {
          "command": "caspian-security.ignoreIssue",
          "when": "false"
        }
      ]
    },
    "configuration": {
      "title": "Caspian Security",
      "properties": {
        "caspianSecurity.autoCheck": {
          "type": "boolean",
          "default": true,
          "description": "Automatically run security checks as you type"
        },
        "caspianSecurity.checkOnSave": {
          "type": "boolean",
          "default": true,
          "description": "Run security checks when files are saved"
        },
        "caspianSecurity.severity": {
          "type": "string",
          "enum": [
            "error",
            "warning",
            "info"
          ],
          "default": "warning",
          "description": "Minimum severity level to report"
        },
        "caspianSecurity.enabledLanguages": {
          "type": "array",
          "default": [
            "javascript",
            "typescript",
            "python",
            "java",
            "csharp",
            "php",
            "go",
            "rust"
          ],
          "description": "Languages to check"
        },
        "caspianSecurity.enableAuthAccessControl": {
          "type": "boolean",
          "default": true,
          "description": "Enable Authentication & Access Control checks"
        },
        "caspianSecurity.enableInputValidationXss": {
          "type": "boolean",
          "default": true,
          "description": "Enable Input Validation & XSS checks"
        },
        "caspianSecurity.enableCsrfProtection": {
          "type": "boolean",
          "default": true,
          "description": "Enable CSRF Protection checks"
        },
        "caspianSecurity.enableCorsConfiguration": {
          "type": "boolean",
          "default": true,
          "description": "Enable CORS Configuration checks"
        },
        "caspianSecurity.enableEncryptionDataProtection": {
          "type": "boolean",
          "default": true,
          "description": "Enable Encryption & Data Protection checks"
        },
        "caspianSecurity.enableApiSecurity": {
          "type": "boolean",
          "default": true,
          "description": "Enable API Security checks"
        },
        "caspianSecurity.enableDatabaseSecurity": {
          "type": "boolean",
          "default": true,
          "description": "Enable Database Security checks"
        },
        "caspianSecurity.enableFileHandling": {
          "type": "boolean",
          "default": true,
          "description": "Enable File Handling checks"
        },
        "caspianSecurity.enableSecretsCredentials": {
          "type": "boolean",
          "default": true,
          "description": "Enable Secrets & Credentials checks"
        },
        "caspianSecurity.enableFrontendSecurity": {
          "type": "boolean",
          "default": true,
          "description": "Enable Frontend Security checks"
        },
        "caspianSecurity.enableBusinessLogicPayment": {
          "type": "boolean",
          "default": true,
          "description": "Enable Business Logic & Payment Security checks"
        },
        "caspianSecurity.enableLoggingMonitoring": {
          "type": "boolean",
          "default": true,
          "description": "Enable Logging & Monitoring checks"
        },
        "caspianSecurity.enableDependenciesSupplyChain": {
          "type": "boolean",
          "default": true,
          "description": "Enable Dependencies & Supply Chain checks"
        },
        "caspianSecurity.enableInfrastructureDeployment": {
          "type": "boolean",
          "default": true,
          "description": "Enable Infrastructure & Deployment checks"
        },
        "caspianSecurity.includeDependencyCheck": {
          "type": "boolean",
          "default": true,
          "description": "Include dependency update and vulnerability checks during workspace scans"
        },
        "caspianSecurity.aiProvider": {
          "type": "string",
          "enum": [
            "anthropic",
            "openai",
            "gemini"
          ],
          "default": "anthropic",
          "description": "AI provider for security fix generation",
          "enumDescriptions": [
            "Anthropic Claude (recommended)",
            "OpenAI GPT-4",
            "Google Gemini"
          ]
        },
        "caspianSecurity.aiModel": {
          "type": "string",
          "default": "",
          "description": "Optional model override (leave empty for provider default: Claude claude-sonnet-4-20250514, OpenAI gpt-4o, Gemini gemini-2.0-flash)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts",
    "check-updates": "npm run compile && node out/cli/checkUpdates.js"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {}
}
